{
  "name": "frontend-components-sandbox",
  "dockerComposeFile": ["../docker-compose.yml"],
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": true
        }
      },
      "extensions": ["dbaeumer.vscode-eslint", "esbenp.prettier-vscode", "styled-components.vscode-styled-components"]
    }
  },
  "service": "app",
  "workspaceFolder": "/app",
  "shutdownAction": "stopCompose"
}
